<div class="row">
  <div class="col-md-12">
    <%= link_to raw("<span class='glyphicon glyphicon-plus' aria-hidden='true'></span> Adicionar"), new_artist_path, class: 'btn btn-primary pull-right' %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Artista</th>
          <th>Telefone</th>
          <th>E-mail</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @artists.each do |artist| %>
        <tr>
          <td><%= artist.name %></td>
          <td><%= artist.phone %></td>
          <td><%= mail_to(artist.email, artist.email) %></td>
          <td class="text-right">
            <%= link_to raw("<span class='glyphicon glyphicon-pencil' aria-hidden='true'></span> Editar"), edit_artist_path(artist), class: 'btn btn-warning btn-xs' %>
            <%= link_to raw("<span class='glyphicon glyphicon-trash' aria-hidden='true'></span> Remover"),  artist,  method: :delete, data: { confirm: "Ter certeza que deseja remover este artista?" }, class: "btn btn-danger btn-xs" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
