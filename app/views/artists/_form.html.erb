<%= form_for @artist do |f| %>
  <div class="row">
    <div class="form-group col-md-4">
      <%= f.label :name, 'Nome' %>
      <%= f.text_field :name, class: 'form-control'%>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-md-6">
      <%= f.label :address, 'Endereço' %>
      <%= f.text_field :address, class: 'form-control'%>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-md-3">
      <%= f.label :phone, 'Telefone' %>
      <%= f.text_field :phone, class: 'form-control'%>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-md-3">
      <%= f.label :email, 'E-mail' %>
      <%= f.email_field :email, class: 'form-control'%>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-md-4">
      <%= f.label :group, 'Grupo de arte' %>
      <%= f.text_field :group, class: 'form-control'%>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-md-4">
      <%= f.label :modality, 'Modalidade artística' %>
      <%= select("artist", "modality_id", @modalities.collect { |m| [m.name, m.id] }, {include_blank: true}, class: 'form-control') %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-md-4">
      <%= f.label :institution, 'Instituição' %>
      <%= select("artist", "institution_id", @institutions.collect { |i| [i.name, i.id] }, {include_blank: true}, class: 'form-control') %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-md-4">
      <div class="row">
        <div class="col-md-12">
          <label>Já tem alguma produção realizada?</label>
          <br />
          <%= f.radio_button :has_production, 'true', :value => true %>
          <%= f.label :has_production, 'Sim' %>
          <br />
          <%= f.radio_button :has_production, 'false', :value => false %>
          <%= f.label :has_production, 'Não' %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-md-6">
      <%= f.label :production_description, 'Descreva as produções realizadas, caso existam' %>
      <%= f.text_area :production_description, class: 'form-control', rows: 3 %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-md-6">
      <%= f.label :other_information, 'Outras informações' %>
      <%= f.text_area :other_information, class: 'form-control', rows: 3 %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-md-6">
      <%= f.label :note, 'Observações' %>
      <%= f.text_area :note, class: 'form-control', rows: 3 %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= f.submit 'Salvar', class: 'btn btn-primary btn-lg' %>
    </div>
  </div>
<% end %>
