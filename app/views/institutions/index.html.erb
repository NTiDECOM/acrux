<div class="row">
  <div class="col-md-12">
    <%= link_to raw("<span class='glyphicon glyphicon-plus' aria-hidden='true'></span> Adicionar"), new_institution_path, class: 'btn btn-primary pull-right' %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Instituição</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @institutions.each do |institution| %>
        <tr>
          <td><%= institution.name %></td>
          <td class="text-right">
            <%= link_to raw("<span class='glyphicon glyphicon-pencil' aria-hidden='true'></span> Editar"), edit_institution_path(institution), class: 'btn btn-warning btn-xs' %>
            <%= link_to raw("<span class='glyphicon glyphicon-trash' aria-hidden='true'></span> Remover"),  institution,  method: :delete, data: { confirm: "Ter certeza que deseja remover esta instituição?" }, class: "btn btn-danger btn-xs" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
